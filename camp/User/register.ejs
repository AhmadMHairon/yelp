<%- layout("layout/boilerplate.ejs") %>

  <h1>create a new account</h1>
  <form action="/register" method="POST" novalidate class="validated-form">
    <div class="mb-3">
      <label for="email" class="form-label">email:</label>
      <input type="email" class="form-control" id="email" placeholder="rad@...." name="email" required>
    </div>
    <div class="mb-3">
      <div class="row">
        <div class="col-md">
          <label for="username" class="form-label">username:</label>
          <input type="text" class="form-control" id="username" placeholder="Hern" name="username" required>
        </div>
        <div class="col-md">
          <label for="password" class="form-label">password:</label>
          <input type="password" class="form-control" id="password" placeholder="123****" name="password" required>
        </div>
      </div>
    </div>

    <button class="btn btn-primary">click me to submit</button>

  </form>